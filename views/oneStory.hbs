<section id="onestory">
  <h2>Add your chapter</h2>
  <div class="onestory-container">
    <div class="first-content">
      <h3>{{title}}</h3>
      {{#each chapters}}
      <div class="image-name">
        <img class="user-img" src="{{this.author.picture_url}}" alt="{{this.author.username}}">
        <div>
          <p>{{ author.username }}</p>
          <p>Last Update: {{dateFormat this.updatedAt "MM/DD/YYYY hh:m a"}}</p>
        </div>
      </div>
    </div>
    <hr>
    <div class="second-content">
      <p>{{this.content}}</p>
    </div>

    <div class="third-content">
      {{#if this._doc.editable}}
      <div class="edit-chapter">
        <a href="/chapters/{{this._id}}/edit">You want to edit?</a>
        <form action="/chapters/{{this._id}}/delete" method="post">
          <input type="submit" value="Delete?">
        </form>
      </div>
      <hr class="hr">
      {{/if}}
      {{/each}}
      <div class="add-chapter">
        {{#if chapterCount}}
        <form action="/stories/{{this._id}}" method="post">
          <textarea name="content" placeholder="Add your chapter HERE..."></textarea>
          <input type="submit" value="Add your new chapter">
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</section>
